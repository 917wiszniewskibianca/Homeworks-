@{
    ViewBag.Title = "Home Page";
}

<div class="login">
    <h1>Login </h1>
    <table>
        <tr><td>Enter username</td><td><input type="text" id="username"></td></tr>
        <tr><td> <button onclick="login()">Login</button> </td></tr>
    </table>
</div>
<script>
    function login(){
        var username = document.getElementById("username").value;
        window.location.href = '@Url.Action("ShowPosts" , "Posts")' + '?username=' + username;
       }
        
</script>