@{
    ViewBag.Title = "Home Page";
   
}

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="login-form"  >
    <h1> User Login </h1>
    <table>
        <tr><td>Enter Username: </td> <td> <input type= text id=username></td></tr>
        <tr><td>Enter Password: </td> <td> <input type= password id=password></td></tr>
        <tr><td><button onclick="tryLogin()">Login</button></td></tr>
    </table>

</div>
<style>
    .login-form {
        margin-top: 100px;
        text-align: center; 
    }
    .login-form table {
        margin: 0 auto;
    }
</style>

<script>
   function tryLogin() {
       var username = document.getElementById('username').value;
       var password = document.getElementById('password').value;
       
       window.location.href = '@Url.Action("Login","Home")' + '?username=' + username + '&password=' + password;
   }
</script>

